<% provide(:title, @user.name) %>


<div class="column">
  <aside class="span2">
    <section>
      <h1> 
        <%= gravatar_for @user %>
       <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<h2>Personalize, group into collections and print your TAGS</h2>

<!--Listing the QRS that belong to current_user-->

  <% @qrs.each do |qr| %>

    <tr>
      <h2><p><td>TAG ID: <%= qr.default_resource%></td></p><h2>
      <%= image_tag("http://chart.apis.google.com/chart?cht=qr&chl=#{qr.default_resource}&chs=120x120&choe=UTF-8", :size => "120x120")%>

      <p>
        <!--<%= link_to 'Show', @qr %> -->
        <td><%= link_to 'Edit', edit_qr_path(qr) %></td>  |
        <td><%= link_to 'Destroy', qr, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        <td><%= link_to 'Download', url_for(:action => 'download_qr', :id => qr.id) %> </td>
      </p>_
    </tr>

      <table>
     <tr>
      <th>Resource Name</th>
      <th>Uri</th>
      <th>Image location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% qr.resources.each do |resource| %>
    <tr>
      <td><%= resource.name %></td>
      <td><%= resource.uri %></td>
      <td><%= resource.image_location %></td>
      <td><%= link_to 'Show', new_qr_resource_path(resource.qr, resource) %></td>
      <td><%= link_to 'Edit', edit_qr_resource_path(resource.qr, resource) %></td>
      <td><%= link_to 'Destroy', qr_resource_path(resource.qr, resource), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    </table>

  <% end %>


