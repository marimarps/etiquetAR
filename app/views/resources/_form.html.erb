<%= form_for([@qr, @resource],:html => { :class => 'form' }) do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <h2>Resource: <%=@resource.name%></h2>
    <div class="control-group">
      <%= f.label 'Resource Name:', class:"control-label" %><br />
        <div class="controls">
          <%= f.text_field :name, placeholder:'The name of your resource'%>
        </div>
    </div>
    <div class="control-group ">
      <%= f.label 'Resource Content:', class:"control-label" %><br />
      <div class="controls">
        <%= f.text_field :uri, placeholder:'Insert an URL (e.g. www.google.com)' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class:'btn'%>
    </div>
  <% end %>
</form>
